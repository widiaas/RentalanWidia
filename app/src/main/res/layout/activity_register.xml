<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:background="@drawable/logosepeda"
        android:layout_width="@dimen/_33sdp"
        android:layout_height="@dimen/_33sdp"/>

    <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="Email"
                    android:textColor="@color/hitam"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/regEmail"
                    android:background="@drawable/edittext"
                    android:textColor="@color/hitam"
                    android:inputType="textEmailAddress"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="Password"
                    android:textColor="@color/hitam"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/regPassword"
                    android:textColor="@color/hitam"
                    android:inputType="textPassword"
                    android:background="@drawable/edittext"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="Nama"
                    android:textColor="@color/hitam"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/regNama"
                    android:inputType="textPassword"
                    android:textColor="@color/hitam"
                    android:background="@drawable/edittext"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="Nomor Handphone"
                    android:textColor="@color/hitam"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/regHp"
                    android:textColor="@color/hitam"
                    android:inputType="number"
                    android:background="@drawable/edittext"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="Alamat"
                    android:textColor="@color/hitam"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/regAlamat"
                    android:textColor="@color/hitam"
                    android:background="@drawable/edittext"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="No Ktp"
                    android:textColor="@color/hitam"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/regKtp"
                    android:textColor="@color/hitam"
                    android:background="@drawable/edittext"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/_220sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/btnRegister"
                    android:shadowColor="@null"
                    android:background="@drawable/btnregister"
                    android:layout_width="@dimen/_55sdp"
                    android:text="Register"
                    android:textStyle="bold"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/hijau"
                    android:layout_height="@dimen/_25sdp"/>
            <TextView
                    android:id="@+id/orLogin"
                    android:onClick="orLogin"
                    android:textColor="@color/hitam"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Sudah Punya akun?"
                    android:textSize="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>